<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
<class name="com.seniorproject.web.pojo.LoanInfo" table="LoanInfo">
<meta attribute="class-description">
This class contains the Loan Info details
</meta>
<id name="id" type="integer" column="id">
			<generator class="identity" />
		</id>
		
		<property name="userId" column="userId" type="integer" />
		<property name="availableAmt" column="availableAmt" type="big_decimal" />
		<property name="creditLimit" column="creditLimit" type="big_decimal" />
		<property name="interestRate" column="interestRate" type="double" />
		<property name="paymentDueDay" column="paymentDueDay" type="int" />
		
</class>

</hibernate-mapping>

